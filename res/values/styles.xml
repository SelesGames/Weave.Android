<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseThemeLight from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseThemeLight" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    
    <style name="AppBaseThemeDark" parent="android:Theme">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application light theme. -->
    <style name="AppThemeLight" parent="AppBaseThemeLight">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        
        <item name="textColor">@color/text_color_light</item>
        <item name="backgroundColor">@color/background_color_light</item>
        <item name="headerBackgroundColor">@color/header_background_light</item>
        <item name="headerForegroundColor">@color/header_foreground_light</item>
        <item name="settingsIcon">@drawable/ic_action_settings_light</item>
    </style>
    
    <!-- Application dark theme. -->
    <style name="AppThemeDark" parent="AppBaseThemeDark">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        
        <item name="textColor">@color/text_color_dark</item>
        <item name="backgroundColor">@color/background_color_dark</item>
        <item name="headerBackgroundColor">@color/header_background_dark</item>
        <item name="headerForegroundColor">@color/header_foreground_dark</item>
        <item name="settingsIcon">@drawable/ic_action_settings_dark</item>
    </style>

    <style name="Text">
        <item name="android:textColor">?textColor</item>
    </style>

    <style name="Text.Dark">
        <item name="android:textColor">@color/text_color_dark</item>
    </style>
    
    <style name="ListItemMenuAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
    </style>
</resources>